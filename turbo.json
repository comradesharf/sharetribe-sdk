{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"compile:openapi": {
			"inputs": ["typespec/*.tsp"],
			"outputs": ["output/@typespec/openapi3/*.yaml"]
		},
		"compile:ts-fetch": {
			"inputs": ["output/@typespec/openapi3/*.yaml"],
			"outputs": ["src/schema.d.ts"],
			"dependsOn": ["compile:openapi"]
		},
		"format-and-lint": {
			"cache": false
		}
	}
}
